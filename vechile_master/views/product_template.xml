<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']//group[@name='inventory']" position="inside">
                <group string="Stock Thresholds" name="stock_thresholds" groups="stock.group_stock_user">
                    <field name="minimum_quantity"/>
                    <field name="maximum_quantity"/>
                    <field name="low_on_stock" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-danger" role="alert" groups="stock.group_stock_user" invisible="not low_on_stock">
                    <strong>Warning!</strong> This product is low on stock.
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="decoration-danger">low_on_stock</attribute>
            </tree>
            <field name="name" position="after">
                <field name="minimum_quantity" groups="stock.group_stock_user" invisible="1"/>
                <field name="maximum_quantity" groups="stock.group_stock_user" invisible="1"/>
                <field name="low_on_stock" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>

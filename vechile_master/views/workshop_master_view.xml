<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_workshop_master_tree" model="ir.ui.view">
        <field name="name">workshop.master.tree</field>
        <field name="model">workshop.master</field>
        <field name="arch" type="xml">
            <tree string="Workshops">
                <field name="workshop_code"/>
                <field name="workshop_name"/>
                <field name="contact_person"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_workshop_master_form" model="ir.ui.view">
        <field name="name">workshop.master.form</field>
        <field name="model">workshop.master</field>
        <field name="arch" type="xml">
            <form string="Workshop">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="workshop_name" placeholder="Workshop Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="workshop_code"/>
                            <field name="contact_person"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="address" placeholder="Enter complete address..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_workshop_master_search" model="ir.ui.view">
        <field name="name">workshop.master.search</field>
        <field name="model">workshop.master</field>
        <field name="arch" type="xml">
            <search string="Workshops">
                <field name="workshop_name"/>
                <field name="workshop_code"/>
                <field name="contact_person"/>
                <field name="phone"/>
                <field name="email"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_workshop_master" model="ir.actions.act_window">
        <field name="name">Workshops</field>
        <field name="res_model">workshop.master</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_workshop_master_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first workshop!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_workshop_master"
              name="Workshop Master"
              action="action_workshop_master"
              parent="vehicle_master"
              sequence="30"/>
</odoo>

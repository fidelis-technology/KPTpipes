<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_equipment_master_tree" model="ir.ui.view">
        <field name="name">equipment.master.tree</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <tree string="Equipment">
                <field name="equipment_code"/>
                <field name="equipment_name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_equipment_master_form" model="ir.ui.view">
        <field name="name">equipment.master.form</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="equipment_name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_code"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_equipment_master_search" model="ir.ui.view">
        <field name="name">equipment.master.search</field>
        <field name="model">equipment.master</field>
        <field name="arch" type="xml">
            <search string="Equipment">
                <field name="equipment_name"/>
                <field name="equipment_code"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_equipment_master" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">equipment.master</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_equipment_master_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_equipment_master"
              name="Equipment Master"
              action="action_equipment_master"
              parent="vehicle_master"
              sequence="20"/>
</odoo>

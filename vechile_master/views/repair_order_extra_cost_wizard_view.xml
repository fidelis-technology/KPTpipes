<odoo>
    <record id="view_repair_order_extra_cost_wizard_form" model="ir.ui.view">
        <field name="name">repair.order.extra.cost.wizard.form</field>
        <field name="model">repair.order.extra.cost.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Extra Cost">
                <sheet>
                    <group>
                        <group>
                            <field name="repair_id" readonly="1" force_save="1"/>
                            <field name="workshop_id"/>
                            <field name="repair_date"/>
                        </group>
                        <group>
                            <field name="invoice_number"/>
                            <field name="source_document" widget="binary" filename="source_document_filename"/>
                            <field name="source_document_filename" invisible="1"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Equipment Lines">
                            <field name="equipment_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" readonly="1"/>
                                    <field name="equipment_id"/>
                                    <field name="amount" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="remarks" placeholder="Add any additional remarks here..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_add_extra_cost" string="Add Extra Cost" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_repair_order_extra_cost_wizard" model="ir.actions.act_window">
        <field name="name">Add Extra Cost</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">repair.order.extra.cost.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_repair_order_extra_cost_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{'default_repair_id': active_id}</field>
    </record>

    <!-- Add the wizard button to the repair order form -->
    <record id="view_repair_order_form_inherit" model="ir.ui.view">
        <field name="name">repair.order.form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_repair_order_extra_cost_wizard)d"
                        string="Add Extra Cost"
                        type="action"
                        class="btn-primary"
                        invisible="state in ('done', 'cancel')"/>
            </xpath>
        </field>
    </record>
</odoo>

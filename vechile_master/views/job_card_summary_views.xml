<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_job_card_summary_wizard_form" model="ir.ui.view">
        <field name="name">job.card.summary.wizard.form</field>
        <field name="model">job.card.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Job Card Summary Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="company_id" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="generate_excel_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_job_card_summary_wizard" model="ir.actions.act_window">
        <field name="name">Job Card Summary Report</field>
        <field name="res_model">job.card.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_job_card_summary_report"
              name="Job Card Summary"
              parent="vehicle_master_menu_reporting"
              action="action_job_card_summary_wizard"
              sequence="102"/>
</odoo>

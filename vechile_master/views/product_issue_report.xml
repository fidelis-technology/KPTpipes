<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="product_issue_slip_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center mb-4">
                                <h3>Product Issue Slip</h3>
                            </div>

                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Issue Date:</strong></td>
                                    <td><span t-field="doc.issue_date"/></td>
                                    <td class="text-right"><strong>Reference:</strong></td>
                                    <td><span t-field="doc.name"/></td>
                                </tr>
                            </table>

                            <!-- Vehicle Details -->
                            <table class="table table-bordered mt-4">
                                <thead class="thead-light">
                                    <tr>
                                        <th colspan="4" style="background-color: #1A237E; color: #fff;" class="text-center">Vehicle Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><strong>Vehicle Number:</strong></td>
                                        <td><span t-field="doc.vehicle_id.name"/></td>
                                        <td><strong>Number Plate:</strong></td>
                                        <td><span t-field="doc.number_plate"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Chassis Number:</strong></td>
                                        <td><span t-field="doc.chassis_number"/></td>
                                        <td><strong>Driver:</strong></td>
                                        <td><span t-field="doc.driver_id.name"/></td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Products -->
                            <table class="table table-bordered mt-4">
                                <thead class="thead-light">
                                        <tr style="background-color: #1A237E; color: #fff;">
                                            <th class="text-center">S.No</th>
                                            <th class="text-center">Product</th>
                                            <th class="text-center">Qty</th>
                                            <th class="text-center">Cost</th>
                                            <th class="text-center">Tax%</th>
                                            <th class="text-center">Amount</th>
                                        </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.product_line_ids" t-as="line">
                                        <td class="text-center">
                                            <span t-esc="line_index + 1"/>
                                        </td>
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td class="text-center"><span t-field="line.quantity"/></td>
                                        <td class="text-center"><span t-field="line.standard_price"/></td>
                                        <td class="text-center"><span t-field="line.tax_ids"/></td>
                                        <td class="text-center"><span t-field="line.total"/></td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5" class="text-center"><strong>Total:</strong></td>
                                        <td class="text-center">
                                            <strong><span t-field="doc.total_amount"/></strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>

                            <!-- Remarks -->
                            <div class="row mt-4" t-if="doc.remarks">
                                <div class="col-12">
                                    <strong>Remarks:</strong>
                                    <p t-field="doc.remarks"/>
                                </div>
                            </div>

                            <!-- Signatures -->
                            <div class="row mt-5">
                                <div class="col-4 text-center">
                                    <div style="border-bottom: 1px solid black; min-height: 20px;">
                                        <span t-field="doc.issued_by.name"/>
                                    </div>
                                    <strong>Issued By</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <div style="border-bottom: 1px solid black; min-height: 20px;">
                                        <span t-field="doc.store_keeper.name"/>
                                    </div>
                                    <strong>Store Keeper</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <div style="border-bottom: 1px solid black; min-height: 20px;">
                                        <span t-field="doc.receiver_id.name"/>
                                    </div>
                                    <strong>Received By</strong>
                                </div>
                            </div>

                            <p class="text-center mt-4">
                                The driver agrees that all the products has been received in good condition.
                            </p>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Paper Format -->
        <record id="paperformat_product_issue" model="report.paperformat">
            <field name="name">Product Issue Slip Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action -->
        <record id="action_product_issue_slip" model="ir.actions.report">
            <field name="name">Issue Slip</field>
            <field name="model">product.issue</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vechile_master.product_issue_slip_template</field>
            <field name="report_file">vechile_master.product_issue_slip_template</field>
            <field name="paperformat_id" ref="paperformat_product_issue"/>
            <field name="print_report_name">'Issue Slip - %s' % (object.name)</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" ref="model_product_issue"/>
        </record>
    </data>
</odoo>